@model Fitness_App.BL.ViewModels.DietPlanViewModel

@{
    ViewData["Title"] = "Add Diet Plan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2 class="mb-4">Add New Diet Plan</h2>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="AddDietPlan" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="PlanTitle" class="control-label font-weight-bold"></label>
                    <input asp-for="PlanTitle" class="form-control" />
                    <span asp-validation-for="PlanTitle" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Image" class="control-label font-weight-bold"></label>
                    <div class="custom-file">
                        <input asp-for="Image" class="custom-file-input" id="customFile">
                        <label class="custom-file-label" for="customFile">Choose image file</label>
                    </div>
                    <span asp-validation-for="Image" class="text-danger"></span>
                    <small class="form-text text-muted">Recommended size: 800x600px, max 2MB</small>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Create Diet Plan
                    </button>
                    <a asp-action="DietPlanManagement" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Update file input label with selected file name
        $(".custom-file-input").on("change", function() {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}